<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen" >

    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <include
        android:id="@+id/footer"
        layout="@layout/footer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/email_layout"
        android:layout_below="@+id/header">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/emailicon"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email @"
            android:id="@+id/textView6"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="info@minacs.com"
            android:id="@+id/textView_email"
            android:textColor="@color/green_light"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/linear_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/email_layout"
        android:layout_above="@id/footer"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/main_heading_padding_topbottom"
                android:paddingBottom="@dimen/main_heading_padding_topbottom"
                android:paddingLeft="@dimen/main_heading_padding_leftright"
                android:paddingRight="@dimen/main_heading_padding_leftright"
                android:text="@string/key_offices"
                android:textStyle="bold"
                android:textSize="@dimen/heading_text_size"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:padding="10sp"
                android:textSize="@dimen/content_text_size"
                android:layout_marginLeft="@dimen/main_heading_padding_leftright"
                android:layout_marginRight="@dimen/main_heading_padding_leftright"
                android:layout_marginTop="@dimen/main_heading_padding_topbottom"
                android:layout_marginBottom="@dimen/main_heading_padding_topbottom"
                android:background="@drawable/address_background"
                android:text="@string/keyoffice1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:padding="10sp"
                android:textSize="@dimen/content_text_size"
                android:gravity="left"
                android:layout_marginLeft="@dimen/main_heading_padding_leftright"
                android:layout_marginRight="@dimen/main_heading_padding_leftright"
                android:layout_marginTop="@dimen/main_heading_padding_topbottom"
                android:layout_marginBottom="@dimen/main_heading_padding_topbottom"
                android:background="@drawable/address_background"
                android:text="@string/keyoffice2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:padding="10sp"
                android:layout_marginLeft="@dimen/main_heading_padding_leftright"
                android:layout_marginRight="@dimen/main_heading_padding_leftright"
                android:layout_marginTop="@dimen/main_heading_padding_topbottom"
                android:layout_marginBottom="@dimen/main_heading_padding_topbottom"
                android:background="@drawable/address_background"
                android:textSize="@dimen/content_text_size"
                android:text="@string/keyoffice3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/main_heading_padding_topbottom"
                android:paddingBottom="@dimen/main_heading_padding_topbottom"
                android:paddingLeft="@dimen/main_heading_padding_leftright"
                android:paddingRight="@dimen/main_heading_padding_leftright"
                android:layout_marginTop="@dimen/main_heading_padding_topbottom"
                android:layout_marginBottom="@dimen/main_heading_padding_topbottom"
                android:text="@string/registered_offices"

                android:textStyle="bold"
                android:textSize="@dimen/heading_text_size"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:padding="10sp"
                android:layout_marginLeft="@dimen/main_heading_padding_leftright"
                android:layout_marginRight="@dimen/main_heading_padding_leftright"
                android:layout_marginTop="@dimen/main_heading_padding_topbottom"
                android:layout_marginBottom="@dimen/main_heading_padding_topbottom"
                android:background="@drawable/address_background"
                android:textSize="@dimen/content_text_size"
                android:text="@string/registeredoffice1"/>

        </LinearLayout>

    </ScrollView>



</RelativeLayout><!-- From: file:/F:/WORK/Minacs/branches/T0360/MinacsALTCRM/app/src/main/res/layout/activity_contact.xml -->